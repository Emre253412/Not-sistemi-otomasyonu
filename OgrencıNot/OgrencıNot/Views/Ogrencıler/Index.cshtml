@using OgrencıNot.Models.EntityFramework
@model List<OGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYETİ</th>
        <th>KULÜP</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OGRENCIID</td>
            <td>@ogr.OGRENCIAD</td>
            <td>@ogr.OGRENCISOYAD</td>
            <td>@ogr.OGRENCICINSIYET</td>
            <td>@ogr.OGRENCIKULUP</td>
            <td>
                <a href="/Ogrencıler/Sil/@ogr.OGRENCIID" class="btn btn-danger">Sil</a>
                <a href="/Ogrencıler/OgrencıGetır/@ogr.OGRENCIID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Ogrencıler/YenıOgrencıler" class="btn btn-primary">Yeni Öğrenci Kaydı</a>