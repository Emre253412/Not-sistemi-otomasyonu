@model OgrencıNot.Models.EntityFramework.OGRENCILER
@{
    ViewBag.Title = "YenıOgrencıler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <form method="post" class="form-group">
        <div>
            <label>Öğrenci Adı</label>
            <input type="text" class="form-control" name="OGRENCIAD" />
        </div>
        <div style="margin-top:10px">

            <label>Öğrenci Soyadı</label>
            <input type="text" class="form-control" name="OGRENCISOYAD" />
        </div>
        <div style="margin-top:10px">


            <label>Öğrenci Fotoğraf</label>
            <input type="text" class="form-control" name="OGRENCIFOTOGRAF" />
        </div>
        <div style="margin-top:10px">

            <label>Öğrenci Cinsiyet</label>
            <input type="text" class="form-control" name="OGRENCICINSIYET" />
        </div>
        <div style="margin-top:10px">

            <label>Öğrenci Kulüp</label>
            @Html.DropDownListFor(m => m.KULUPLER.KULUPID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        </div>
        <div style="margin-top:10px">

            <button class="btn btn-info">Öğrenci Ekle</button>

        </div>

    </form>
 </div>