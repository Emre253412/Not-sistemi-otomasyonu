@using OgrencıNot.Models.EntityFramework
@model List<KULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table  class="table table-bordered">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
        <tr>
            <td>@klp.KULUPID</td>
            <td>@klp.KULUPADI</td>
            <td><a href="/Kulupler/Sil/@klp.KULUPID" class="btn btn-danger">Sil</a>
            <a href="/Kulupler/KulupGetır/@klp.KULUPID" class="btn btn-success">Güncelle</a></td>

        </tr>
        }
    </tbody>
</table>
<a href="/Kulupler/YenıKulupler" class="btn btn-primary">Yeni Kulüp Kaydı</a>